@model WebMVC.Models.ViewModelNacional;

@{
    ViewData["Title"] = "CreateNacional";
}

<h1>CreateNacional</h1>

<h4>Nacional</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="CreateNacional">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Producto.EcoAmigable" /> @Html.DisplayNameFor(model => model.Producto.EcoAmigable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Producto.Codigo" class="control-label"></label>
                <input asp-for="Producto.Codigo" class="form-control" />
                <span asp-validation-for="Producto.Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producto.Nombre" class="control-label"></label>
                <input asp-for="Producto.Nombre" class="form-control" />
                <span asp-validation-for="Producto.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producto.Precio" class="control-label"></label>
                <input asp-for="Producto.Precio" class="form-control" />
                <span asp-validation-for="Producto.Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producto.Stock" class="control-label"></label>
                <input asp-for="Producto.Stock" class="form-control" />
                <span asp-validation-for="Producto.Stock" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <select name="IdCategoriaSeleccionada" id="categorias">
                    @foreach (Dominio.EntidadesNegocio.Categoria cat in Model.Categorias)
                    {
                        <option value="@cat.Id">@cat.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <select name="IdProveedorSeleccionado" id="proveedores">
                    @foreach (Dominio.EntidadesNegocio.Proveedor prov in Model.Proveedores)
                    {
                        <option value="@prov.Id">@prov.RazonSocial</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label>FOTO:</label>
                <input asp-for="Imagen" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="submit" value="CREAR" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
